<script>
import Cookies from "js-cookie"
export default {
    data() {
        return {
            activeIndex: '0',
            orgOptions: [],
            orgSelectedCode: '',
            accountInfo: '',

            tableDataCollector: [],
            tableDataSampling: [],
            tableDataSampleAnalyse: [],
            tableDataAnalyseReport: []
        }
    },
    components: {},
    methods: {
        searchByOrgan() {
            let req = {organCode:this.orgSelectedCode};
            this.$api.IndexQuery(req).then(res => {
                this.tableDataCollector = res.data.sjcj;
                this.tableDataSampling = res.data.sjcy;
                this.tableDataSampleAnalyse = res.data.ybfx;
                this.tableDataAnalyseReport = res.data.fxbg;
            }).catch(err => {
                this.$commsgbox.alert(err);
            });
        },
        changeOrganCode(value){
            sessionStorage.setItem('organCode', value);
            this.searchByOrgan();
        },
        getOrganCombox() {
            this.$api.OrganCombox({}).then(res => {
                this.orgOptions = res.data;
                this.orgSelectedCode = sessionStorage.getItem('organCode');
                if(this.orgSelectedCode){
                    this.searchByOrgan();
                }
            }).catch(err => {
                this.$commsgbox.alert(err);
            });
        },
        logout() {
            this.$api.LoginOut({}).then(() => {
                Cookies.remove("AuthToken");
                Cookies.remove("ddpAccount");
                sessionStorage.clear();
                window.location.reload();
            }).catch(err => {
                this.$commsgbox.alert(err);
            });
        },
        arraySpanMethod({ row, column, rowIndex, columnIndex }) {
            if(rowIndex == 6){
                if (columnIndex === 2) {
                    return [2,3,4,5,6];
                }
            }
        },
    },
    created: function () {
        this.getOrganCombox();
        this.accountInfo = Cookies.get('ddpAccount');
    }
};
</script>
