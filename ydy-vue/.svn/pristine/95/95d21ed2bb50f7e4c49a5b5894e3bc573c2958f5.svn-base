<script>
import Cookies from "js-cookie"
export default {
  data() {
    return {
      activeIndex: '0',
      orgOptions: [],
      orgSelectedCode: '',
      accountInfo: ''
    };
  },
  methods: {
    searchByOrgan() {
      console.log(this.orgSelectedCode);
    },
    //机构下拉切换,给全局变量organCode赋值
    changeOrganCode(value){
      this.$store.state.organCode = value;
    },
    getOrganCombox() {
      this.$api.OrganCombox({}).then(res => {
        this.orgOptions = res.data;
      }).catch(err => {
        this.$commsgbox.alert(err);
      });
    },
    logout() {
      this.$api.LoginOut({}).then(() => {
          Cookies.remove("AuthToken");
          Cookies.remove("ddpAccount");
          window.location.reload();
      }).catch(err => {
          this.$commsgbox.alert(err);
      });
    }
  },
  created: function () {
    this.getOrganCombox();
    this.accountInfo = Cookies.get('ddpAccount');
  }
};
</script>


