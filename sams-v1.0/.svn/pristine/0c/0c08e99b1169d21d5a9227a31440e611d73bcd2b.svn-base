log4j.rootLogger=INFO, INFO_FILE, CON,CON_FILE

log4j.appender.CON=org.apache.log4j.ConsoleAppender
log4j.appender.CON.layout=org.apache.log4j.PatternLayout
log4j.appender.CON.layout.ConversionPattern=[%p]-%-d{HH:mm:ss}-%c{1}[%L] - %m%n

log4j.logger.net.cxp.blog.dao=DEBUG
log4j.logger.com.sams.custom.mapper=DEBUG

# 输出 无sql语句打印
log4j.appender.INFO_FILE=org.apache.log4j.DailyRollingFileAppender
log4j.appender.INFO_FILE.File=/home/weblogic/logs/samslogs/info/sams.log
log4j.appender.INFO_FILE.DatePattern='.'yyyy-MM-dd
log4j.appender.INFO_FILE.layout=org.apache.log4j.PatternLayout
log4j.appender.INFO_FILE.layout.ConversionPattern=[%p]-%-d{HH:mm:ss}-%c{1}[%L] - %m%n
log4j.appender.INFO_FILE.threshold=INFO
log4j.appender.INFO_FILE.ImmediateFlush=true
log4j.appender.INFO_FILE.Append=true
#  输出有sql语句
log4j.appender.CON_FILE=org.apache.log4j.DailyRollingFileAppender
log4j.appender.CON_FILE.File=/home/weblogic/logs/samslogs/debug/sams.log
log4j.appender.CON_FILE.DatePattern='.'yyyy-MM-dd
log4j.appender.CON_FILE.layout=org.apache.log4j.PatternLayout
log4j.appender.CON_FILE.layout.ConversionPattern=[%p]-%-d{HH:mm:ss}-%c{1}[%L] - %m%n
log4j.appender.CON_FILE.threshold=DEBUG
log4j.appender.CON_FILE.ImmediateFlush=true
log4j.appender.CON_FILE.Append=true
