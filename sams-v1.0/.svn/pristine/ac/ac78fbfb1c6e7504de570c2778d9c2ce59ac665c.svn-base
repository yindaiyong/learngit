/*--------------------------------------EasyUI---------------------------------------------------------------*/
*{font-size:12px;}
body {font-family:helvetica,tahoma,verdana,sans-serif;padding:20px;font-size:13px;margin:0;}
h2 {font-size:18px;font-weight:bold;margin:0;margin-bottom:15px;}

/** table */
.gridDiv {overflow: hidden;padding: 3px;}
.grid {border: 1px solid #eeeeee;font: 12px arial,helvetica,sans-serif;}
.grid td {font: 100% arial,helvetica,sans-serif;height: 25px;padding: 5px;}
.grid {border-collapse: collapse;width: 100%;}
.grid th {background: none repeat scroll 0 0 #E7F3FE;border: 1px solid #eeeeee;height: 28px;line-height: 28px;padding-left: 5px;}
.grid td {border: 1px solid #eeeeee;padding-left: 5px;}
.grid tr td select {width: 130px}
.grid tr td input[multiline]{height:40px;width:80%}

/**datagrid*/
/* 设置数据行高,解决动态加载LinkButton，数据列高度偏移问题 */
.datagrid-row {height: 28px;}
